<div class="container">
  <div class="mb-4">
    {{#link-to "posts"}}
      <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
      Return
    {{/link-to}}
  </div>
  <div class="row">
    <div class="col-12 col-lg-8 mb-5">
      <div class="card">
        <img src={{model.post.imageUrl}} alt={{model.post.title}} class="card-img-top">
        <div class="card-body">
          <h1 class="card-title h2">
            {{model.post.title}}
          </h1>
          <p class="card-text">
            {{model.post.content}}
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-4">
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title">
            Comments
          </h2>
        </div>
        {{#if model.post.comments.length}}
          <ul class="list-group list-group-flush">
            {{#each model.post.comments as |comment|}}
              <li class="list-group-item">
                <CommentItem @comment={{comment}}></CommentItem>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <div class="card-body">
            <div class="text-muted">There are no comments at the moment</div>
          </div>
        {{/if}}
      </div>
      <div class="card">
        <div class="card-body">
          <CommentForm
            @form={{commentForm}}
            @onSubmit={{action "sendComment"}}
          >
            <BsButton
              @type="success"
              @buttonType="submit"
              @size="sm"
              @defaultText="Send"
            ></BsButton>
          </CommentForm>
        </div>
      </div>
    </div>
  </div>
</div>