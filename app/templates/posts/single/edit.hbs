<div class="container">
  <div class="mb-4">
    {{#link-to "posts"}}
      <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
      Return
    {{/link-to}}
  </div>
  <PostForm
    @form={{form}}
    @disabled={{model.isSaving}}
    @onSubmit={{action "updatePost"}}
  >
    {{#if model.isSaving}}
      <BsAlert
        class="mb-3"
        @type="info"
        @dismissible={{false}}
      >
        Saving...
      </BsAlert>
    {{/if}}
    {{#if isSaved}}
      <BsAlert
        class="mb-3"
        @type="success"
      >
        Saved!
      </BsAlert>
    {{/if}}
    {{#if model.isError}}
      <BsAlert
        class="mb-3"
        @type="danger"
      >
        Saving error!
      </BsAlert>
    {{/if}}
    <BsButton
      @defaultText="Update"
      @type="success"
      @buttonType="submit"
    />
  </PostForm>
</div>