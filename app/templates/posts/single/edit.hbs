<div class="container">
  <div class="mb-4">
    {{#link-to "posts"}}
      <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
      Return
    {{/link-to}}
  </div>
  <PostForm
    @form={{form}}
    @onSubmit={{action "updatePost"}}
  >
    <BsButton
      @defaultText="Update"
      @type="success"
      @buttonType="submit"
    />
  </PostForm>
</div>