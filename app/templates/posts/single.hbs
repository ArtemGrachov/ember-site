<div class="container">
  <div class="mb-4">
    {{#link-to "posts"}}
      <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
      Return
    {{/link-to}}
  </div>
  <div class="row">
    <div class="col-12 col-lg-8 mb-5">
      <div class="card">
        <img src={{model.imageUrl}} alt={{model.title}} class="card-img-top">
        <div class="card-body">
          <h1 class="card-title h2">
            {{model.title}}
          </h1>
          <p class="card-text">
            {{model.content}}
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">
            Comments
          </h2>
          <div class="text-muted">There are no comments at the moment</div>
        </div>
      </div>
    </div>
  </div>
</div>