<div class="container">
  <div class="mb-4">
    {{#link-to "posts"}}
      <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
      Return
    {{/link-to}}
  </div>
  <PostForm
    @form={{model.form}}
    @onSubmit={{action "createPost"}}
    @disabled={{saving}}
  >
    {{#if model.saving}}
      <BsAlert
        class="mb-3"
        @type="info"
        @dismissible={{false}}
      >
        Saving...
      </BsAlert>
    {{/if}}
    {{#if model.error}}
      <BsAlert
        class="mb-3"
        @type="danger"
      >
        Saving error!
      </BsAlert>
    {{/if}}
    <BsButton
      @defaultText="Create"
      @type="success"
      @buttonType="submit"
    />
  </PostForm>
</div>