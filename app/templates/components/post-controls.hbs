<LinkTo
  @route="posts.single"
  @model={{post.id}}
  class="btn btn-primary btn-sm"
>
  Read
</LinkTo>
<LinkTo
  @route="posts.single.edit"
  @model={{post.id}}
  class="btn btn-info btn-sm"
>
  Edit
</LinkTo>
<BsButton
  @onClick={{action "openDeleteModal"}}
  @size="sm"
  @type="danger"
>
  {{#if error}}
    Error
  {{else if processing}}
    Deleting...
  {{else}}
    Delete
  {{/if}}
</BsButton>
<ModalDeletePostConfirmation
  @confirmDeleting={{action "confirmDeleting"}}
  @showDeleteModal={{showDeleteModal}}
  @onHidden={{action "closeModal"}}
></ModalDeletePostConfirmation>
